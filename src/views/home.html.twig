<!DOCTYPE html>
<html lang="en">
<head>
    <title>jief.me</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js"></script>
    <script src="assets/js/app.js"></script>
</head>

<body ng-app="jiefApp">
    <script type="text/javascript">
        if (location.hostname === 'jief.me' || location.hostname === 'monfort.me') {
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-5551177-5']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })()
        }
    </script>
    <div class="container" ng-controller="JiefController" ng-init="init();">
        <div class="row">
            <div class="col-md-9">
                <h1>[[name]]</h1>
            <h2>[[headline]]</h2>
            <h3>
            <span ng-repeat="position in positions">
              [[position.title]] @ <a href="http://www.linkedin.com/company/[[position.company.id]]?trk=prof-exp-company-name" data-serv="[[position.company.name]]" target="_blank">[[position.company.name]]</a><br />
            </span>
            </h3>
            <h2>Skills</h2>
            <div class="skills">
            <span ng-repeat="skill in skills">
              <span class="label label-[[skill.label]]">[[skill.name]]</span>
            </span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="right">
                <ul class="icons">
                    <li ng-repeat="social in socials"><a href="[[social.url]]" data-serv="[[social.key]]" id="icn-[[social.key]]"><span>[[social.label]]</span></a></li>
                </ul>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
        <p class="navbar-text pull-right">
            Framework : <a href="http://silex.sensiolabs.org/">Silex</a> -
            API : <a href="http://developer.linkedin.com/apis">LinkedIn</a> -
            HTML : <a href="http://getbootstrap.com/">Bootstrap</a> -
            Icons : <a href="http://simpleicons.org/">Simple Icons</a>
        </p>
    </nav>
    <script type="text/javascript">
        (function($) {
            $("a").click(function() {
                if($(this).data('serv')) {
                    _gaq.push(['_trackEvent', 'Links', 'Click', $(this).data('serv')]);
                }
            });
        })(jQuery);
    </script>
</body>
</html>
